.order-detail-container {
  padding-bottom: 200rpx;
}

.section {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.dining-options {
  display: flex;
  gap: 20rpx;
}

.option {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  color: #666;
}

.option.active {
  border-color: #ff6b6b;
  background: #fff5f5;
  color: #ff6b6b;
}

.table-input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.order-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

.item-name {
  flex: 1;
  font-size: 30rpx;
}

.item-count {
  color: #999;
  margin-right: 30rpx;
}

.item-price {
  color: #ff6b6b;
  font-weight: bold;
}

.remark-input {
  width: 100%;
  height: 150rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.total-section {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin: 20rpx;
  border-radius: 10rpx;
}

.total-label {
  font-size: 32rpx;
}

.total-price {
  font-size: 40rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-left: 20rpx;
}

.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  text-align: center;
}