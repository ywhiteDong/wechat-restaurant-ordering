.menu-container {
  display: flex;
  height: 100vh;
  background: #f5f5f5;
}

.category-list {
  width: 180rpx;
  background: white;
  height: calc(100vh - 100rpx);
}

.category-item {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-left: 6rpx solid transparent;
}

.category-item.active {
  color: #ff6b6b;
  background: #fff5f5;
  border-left-color: #ff6b6b;
  font-weight: bold;
}

.food-list {
  flex: 1;
  height: calc(100vh - 100rpx);
  padding: 0 20rpx;
}

.food-category-title {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 0;
}

.food-item {
  display: flex;
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.food-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.food-info {
  flex: 1;
  margin-left: 20rpx;
}

.food-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.food-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.food-sales {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.food-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-top: 10rpx;
}

.food-action {
  display: flex;
  align-items: flex-end;
}

.add-btn {
  width: 50rpx;
  height: 50rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 50%;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.count-control {
  display: flex;
  align-items: center;
}

.minus, .plus {
  width: 50rpx;
  height: 50rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.count {
  margin: 0 20rpx;
  font-size: 30rpx;
}

/* 购物车栏 */
.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  z-index: 100;
}

.cart-left {
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.cart-icon {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.cart-icon image {
  width: 100%;
  height: 100%;
}

.cart-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: red;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 20rpx;
}

.cart-price {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-left: 20rpx;
}

.cart-btn {
  background: #ff6b6b;
  color: white;
  padding: 0 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}

/* 购物车弹窗 */
.cart-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 200;
}

.cart-detail {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  background: white;
  max-height: 60vh;
  border-radius: 20rpx 20rpx 0 0;
}

.cart-header {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.clear-btn {
  color: #999;
  font-size: 28rpx;
}

.cart-items {
  max-height: 50vh;
  padding: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-name {
  flex: 1;
  font-size: 30rpx;
}

.item-price {
  color: #ff6b6b;
  font-size: 30rpx;
  margin-right: 30rpx;
}