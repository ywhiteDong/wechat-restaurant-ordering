.order-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
}

.empty-text {
  color: #999;
  font-size: 30rpx;
  margin: 30rpx 0;
}

.go-menu-btn {
  background: #ff6b6b;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
}

.order-card {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  color: #ff6b6b;
  font-size: 28rpx;
}

.order-info {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.label {
  color: #999;
}

.order-foods {
  padding: 20rpx 0;
}

.food-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.food-name {
  flex: 1;
}

.food-count {
  color: #999;
  margin-right: 30rpx;
}

.food-price {
  color: #ff6b6b;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.total {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.total-price {
  color: #ff6b6b;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.reorder-btn {
  background: #ff6b6b;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}