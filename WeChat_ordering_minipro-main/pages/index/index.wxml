<view class="index-container">
  <!-- 顶部轮播图 -->
  <swiper class="banner" indicator-dots autoplay circular>
    <swiper-item>
      <image src="/images/banner1.jpg" mode="aspectFill"/>
    </swiper-item>
    <swiper-item>
      <image src="/images/banner2.jpg" mode="aspectFill"/>
    </swiper-item>
  </swiper>

  <!-- 店铺信息 -->
  <view class="shop-info">
    <view class="shop-name">蓓蓓的餐厅</view>
    <view class="shop-desc">用心做好每一道菜</view>
    <view class="shop-time">营业时间：10:00 - 22:00</view>
    <view class="shop-address">📍 广东省深圳市福永街道聚福园</view>
    <view class="shop-phone">📞 400-888-8888</view>
  </view>

  <!-- 功能入口 -->
  <view class="features">
    <view class="feature-item" bindtap="goToMenu">
      <image src="/images/icon-menu.png" class="feature-icon"/>
      <text>开始点餐</text>
    </view>
    <view class="feature-item" bindtap="goToOrder">
      <image src="/images/icon-order.png" class="feature-icon"/>
      <text>我的订单</text>
    </view>
  </view>

  <!-- 热销推荐 -->
  <view class="hot-section">
    <view class="section-title">🔥 热销推荐</view>
    <scroll-view scroll-x class="hot-list">
      <view class="hot-item" wx:for="{{hotFoods}}" wx:key="id" bindtap="goToMenu">
        <image src="{{item.image}}" class="hot-image"/>
        <view class="hot-name">{{item.name}}</view>
        <view class="hot-price">¥{{item.price}}</view>
      </view>
    </scroll-view>
  </view>
</view>